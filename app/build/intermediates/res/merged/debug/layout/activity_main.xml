<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/toolbar"
            layout="@layout/view_toolbar" >
        </include>
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:background="@drawable/ic_bg_headers"
            android:layout_below="@+id/toolbar">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Halaman Home"
                android:id="@+id/textView2"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/view_nav_header"
        app:itemTextColor="#fff"
        app:itemIconTint="#B6B6B6"
        app:menu="@menu/menu_nav_items" />
</android.support.v4.widget.DrawerLayout><!-- From: file:/C:/Users/subki/Documents/Android/Dkucrut/app/src/main/res/layout/activity_main.xml -->